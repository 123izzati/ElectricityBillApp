<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/colorPrimary"/>

        <!-- Student Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#E3F2FD"
                        android:gravity="center"
                        android:text="ðŸ‘¤"
                        android:textSize="20sp"
                        app:cornerRadius="18dp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Student Information"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                </LinearLayout>

                <!-- Student Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- Full Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ "
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Full Name"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NUR IZZATI BINTI ZAHID"
                                android:textSize="16sp"
                                android:textColor="#333333"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Student ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ“ "
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Student ID"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewStudentId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2023680806"
                                android:textSize="16sp"
                                android:textColor="#333333"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Course -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“š "
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Course"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewCourse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ICT602 - Mobile Technology"
                                android:textSize="16sp"
                                android:textColor="#333333"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Application Website Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#E8F5E9"
                        android:gravity="center"
                        android:text="ðŸŒ"
                        android:textSize="20sp"
                        app:cornerRadius="18dp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Application Website"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                </LinearLayout>

                <!-- GitHub Link -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GitHub Repository"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/textViewUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/123izzati/ElectricityBillApp"
                        android:textSize="14sp"
                        android:textColor="#2196F3"
                        android:autoLink="web"
                        android:padding="12dp"
                        android:background="#E3F2FD"
                        app:cornerRadius="8dp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click the link above to visit the project repository on GitHub"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Electricity Bill Calculator. All rights reserved."
            android:gravity="center"
            android:textStyle="italic"/>

        <!-- Spacer at bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    </LinearLayout>
</ScrollView>